<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>УМТЭ | <%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,500;0,600;0,700;0,800;1,300;1,400;1,500;1,600;1,700;1,800&display=swap"
        rel="stylesheet">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <link rel="stylesheet" href="/stylesheets/preloader.css">
    <link rel="stylesheet" href="/stylesheets/gallery.css">
</head>

<body>
    <%- include('layouts/preloader') -%>
        <%- include('layouts/header') -%>
            <main>
                <section class="gallery">
                    <div class="gallery__wrapper">
                        <div class="gallery__title">Репертуар</div>
                        <div class="gallery__body">
                            <!--  -->
                            <% if (events.length) { %>
                                <% events.forEach(({event_id, event_title, event_subtitle, event_description_tiny})=> {%>
                                    <div class="gallery__card">
                                        <div class="gallery__card_inner">
                                            <span class="card_title">
                                                <%= event_title %>
                                            </span>
                                            <span class="card_description">
                                                <%= event_description_tiny %>
                                            </span>
                                            <span>
                                                <a class="card_learnmore" href="/event/<%= event_id %>">Подробнее</a>
                                            </span>
                                        </div>
                                        <img src="/images/Афиша - Музыка - душа кино.jpeg" alt="">
                                    </div>
                                <% }) %>
                            <% } %>
                            <!--  -->
                        </div>
                    </div>
                </section>
            </main>
            <%- include('layouts/footer') -%>
</body>

<%- include('layouts/scripts') -%>

</html>